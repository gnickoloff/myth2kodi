  InformCont "To: $MoveDir/$ShowFileName.$OriginalExt"
  [[ "$SYMLINK" != "Disabled" ]] && InformCont "Added symbolic link from: $InputPath"
  [[ "$SYMLINK" != "Disabled"  ]] && InformCont "To: $MoveDir/$ShowFileName.$OriginalExt"
  NOTIFY_MSG="myth2kodi Success $ShowFileName moved to $MoveDir"
  return 0
}

